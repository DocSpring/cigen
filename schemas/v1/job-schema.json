{
  "$id": "https://cigen.dev/schemas/v1/job-schema.json",
  "title": "CIGen Job Schema",
  "description": "Schema for job definition files in workflows",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference for validation"
    },
    "image": {
      "type": "string",
      "description": "Docker image to use for the job"
    },
    "architectures": {
      "type": "array",
      "description": "Target architectures for this job",
      "items": {
        "type": "string",
        "enum": ["amd64", "arm64"]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "resource_class": {
      "type": "string",
      "description": "Resource class size (e.g., small, medium, large, xlarge)",
      "enum": ["small", "medium", "large", "xlarge", "2xlarge", "self_hosted"]
    },
    "type": {
      "type": "string",
      "description": "Job type (e.g., approval for manual approval jobs)",
      "enum": ["approval"]
    },
    "source_files": {
      "oneOf": [
        {
          "type": "string",
          "description": "Reference to a source file group (e.g., '@ruby') or inline glob pattern"
        },
        {
          "type": "array",
          "description": "Array of source file group references and/or glob patterns",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      ]
    },
    "parallelism": {
      "type": "integer",
      "description": "Number of parallel instances of this job",
      "minimum": 1
    },
    "requires": {
      "oneOf": [
        {
          "type": "string",
          "description": "Single job dependency"
        },
        {
          "type": "array",
          "description": "List of job dependencies",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      ],
      "description": "Jobs that must complete before this job runs"
    },
    "cache": {
      "type": "object",
      "description": "Named caches for this job",
      "patternProperties": {
        "^[a-z_]+$": {
          "oneOf": [
            {
              "type": "string",
              "description": "Shorthand: single path (restore defaults to true)"
            },
            {
              "type": "array",
              "description": "Shorthand: array of paths (restore defaults to true)",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "object",
              "description": "Full format with restore control",
              "properties": {
                "restore": {
                  "type": "boolean",
                  "description": "Whether to restore this cache (default: true)",
                  "default": true
                },
                "path": {
                  "oneOf": [
                    {
                      "type": "string",
                      "description": "Single path"
                    },
                    {
                      "type": "array",
                      "description": "Array of paths",
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "paths": {
                  "oneOf": [
                    {
                      "type": "string",
                      "description": "Single path"
                    },
                    {
                      "type": "array",
                      "description": "Array of paths",
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                }
              },
              "oneOf": [{ "required": ["path"] }, { "required": ["paths"] }]
            }
          ]
        }
      }
    },
    "restore_cache": {
      "type": "array",
      "description": "List of caches to restore before running steps",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "description": "Name of cache to restore"
          },
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of cache to restore"
              },
              "dependency": {
                "type": "boolean",
                "description": "Whether this is a required dependency"
              }
            },
            "required": ["name"]
          }
        ]
      }
    },
    "services": {
      "type": "array",
      "description": "Service containers to run with this job",
      "items": {
        "type": "string",
        "description": "Reference to a service defined in config"
      }
    },
    "packages": {
      "oneOf": [
        {
          "type": "string",
          "description": "Single package manager to use",
          "enum": ["node", "ruby", "python", "go"]
        },
        {
          "type": "array",
          "description": "Package managers to use for dependency installation",
          "items": {
            "oneOf": [
              {
                "type": "string",
                "enum": ["node", "ruby", "python", "go"]
              },
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "enum": ["node", "ruby", "python", "go"]
                  },
                  "path": { "type": "string" }
                },
                "required": ["name", "path"],
                "additionalProperties": false
              }
            ]
          },
          "uniqueItems": false
        }
      ]
    },
    "environment": {
      "type": "object",
      "description": "Environment variables for the job",
      "patternProperties": {
        "^[A-Z_]+$": {
          "type": "string"
        }
      }
    },
    "checkout": {
      "description": "Configure initial git checkout behavior (set to false to skip)",
      "oneOf": [
        { "type": "boolean" },
        {
          "type": "object",
          "properties": {
            "shallow": { "type": "boolean", "default": true },
            "clone_options": { "type": "string" },
            "fetch_options": { "type": "string" },
            "tag_fetch_options": { "type": "string" },
            "keyscan": {
              "type": "object",
              "properties": {
                "github": { "type": "boolean" },
                "gitlab": { "type": "boolean" },
                "bitbucket": { "type": "boolean" }
              },
              "additionalProperties": false
            },
            "path": { "type": "string" }
          },
          "additionalProperties": false
        }
      ]
    },
    "context": {
      "oneOf": [
        {
          "type": "string",
          "description": "Single CircleCI context name"
        },
        {
          "type": "array",
          "description": "List of CircleCI context names",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      ],
      "description": "CircleCI contexts to use for this job"
    },
    "steps": {
      "type": "array",
      "description": "Steps to execute in the job",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "description": "Reference to a command"
          },
          {
            "type": "object",
            "description": "Step with 'run' command",
            "properties": {
              "run": {
                "oneOf": [
                  {
                    "type": "string",
                    "description": "Simple command string"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "Step name"
                      },
                      "command": {
                        "type": "string",
                        "description": "Command to execute"
                      },
                      "shell": {
                        "type": "string",
                        "description": "Shell to use"
                      },
                      "background": {
                        "type": "boolean",
                        "description": "Run in background"
                      },
                      "working_directory": {
                        "type": "string",
                        "description": "Working directory"
                      },
                      "no_output_timeout": {
                        "type": "string",
                        "description": "Timeout for no output"
                      },
                      "when": {
                        "type": "string",
                        "enum": ["always", "on_success", "on_fail"],
                        "description": "When to run"
                      },
                      "environment": {
                        "type": "object",
                        "description": "Environment variables"
                      }
                    },
                    "required": ["command"],
                    "additionalProperties": false
                  }
                ]
              }
            },
            "required": ["run"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "description": "Built-in CircleCI steps or custom commands",
            "additionalProperties": true,
            "minProperties": 1,
            "maxProperties": 1,
            "not": {
              "required": ["run"]
            }
          }
        ]
      }
    }
  },
  "additionalProperties": false
}
